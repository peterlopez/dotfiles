# -----------------------------------------------
# common directories 
# -----------------------------------------------
alias home="cd ~"
alias hoem="home"
alias dev="cd ~/dev"
alias sites="cd ~/sites"
alias scripts="cd ~/scripts"
alias dotfiles="cd ~/dev/dotfiles"


# -----------------------------------------------
# shorthand commands
# -----------------------------------------------
alias l="ls -BA1Fh"
alias la="ls -lAh"
alias ll="ls -lAh"
alias mv="mv -v"
alias cat="ccat"
alias o="open ."

#alias config="sublime ~/.config/fish/config.fish"
alias editaliases="sublime ~/.aliases"


# -----------------------------------------------
# programs/apps
# -----------------------------------------------
# websites
alias github="osascript -e 'tell application \"Firefox\" to activate' -e 'tell application \"Firefox\" to open location \"https://github.com/\"'"
alias gmail="osascript -e 'tell application \"Google Chrome\" to activate' -e 'tell application \"Google Chrome\" to open location \"https://gmail.com/\"'"

alias sourcetree="open -a ~/Applications/SourceTree.app"
alias st="sourcetree ."

alias ff="osascript -e 'tell application \"Firefox\" to activate'"
alias subliem="sublime"
alias subl="sublime"

# Git
# alias git="hub"
# todo fix when not in git repo
#alias gits="[ -z \"$(gits)\" ] && git status -s;  [ -n \"$(gits)\" ] && gits"
alias gitp="git pull"
alias gitpp="git push"
alias gitc="git checkout"
alias gitl="git lg"
alias gitf="git fetch --all"
alias gitb="git rev-parse --abbrev-ref HEAD"
alias gitconfig="sublime ~/.gitconfig"
alias gittrack='git push --set-upstream origin $(gitb)'

# Docker
alias dcu="docker-compose up -d"
alias dcd="docker-compose down"

# run vim with custom settings in non-default location
#alias vi="vi -u ~/.config/.vimrc"

# Run php script with Xdebug enabled
alias phpxdebug="php -d xdebug.remote_autostart=On"


# -----------------------------------------------
# Mac OS
# -----------------------------------------------
alias showHiddenFiles="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder;"

alias audiointernal="audiodevice output Internal\ Speakers"
alias audioappletv="audiodevice output Apple\ TV"
alias audioheadphones="audiodevice output Headphones"
